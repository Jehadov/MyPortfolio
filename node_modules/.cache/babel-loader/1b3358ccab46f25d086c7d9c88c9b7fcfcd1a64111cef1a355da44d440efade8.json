{"ast":null,"code":"import \"core-js/modules/es.iterator.constructor.js\";\nimport \"core-js/modules/es.iterator.for-each.js\";\nimport \"core-js/modules/es.iterator.map.js\";\nimport { ref, onMounted, nextTick } from 'vue';\nimport { collection, getDocs } from 'firebase/firestore';\nimport { db } from '../firebase';\nexport default {\n  name: 'PortfolioSection',\n  setup() {\n    const projects = ref([]);\n    const projectRefs = ref([]);\n    const visibleCards = ref([]);\n    const fetchProjects = async () => {\n      try {\n        const querySnapshot = await getDocs(collection(db, 'projects'));\n        projects.value = querySnapshot.docs.map(doc => doc.data());\n        visibleCards.value = new Array(projects.value.length).fill(false);\n        await nextTick();\n        observeCards();\n      } catch (error) {\n        console.error('Error fetching projects:', error);\n      }\n    };\n    const observeCards = () => {\n      projectRefs.value.forEach((el, index) => {\n        const observer = new IntersectionObserver(([entry]) => {\n          visibleCards.value[index] = entry.isIntersecting;\n        }, {\n          threshold: 0.3\n        });\n        observer.observe(el);\n      });\n    };\n    onMounted(fetchProjects);\n    return {\n      projects,\n      visibleCards,\n      projectRefs\n    };\n  }\n};","map":{"version":3,"names":["ref","onMounted","nextTick","collection","getDocs","db","name","setup","projects","projectRefs","visibleCards","fetchProjects","querySnapshot","value","docs","map","doc","data","Array","length","fill","observeCards","error","console","forEach","el","index","observer","IntersectionObserver","entry","isIntersecting","threshold","observe"],"sources":["F:\\MyPortfolio\\src\\components\\PortfolioSection.vue"],"sourcesContent":["<template>\r\n  <section class=\"py-5 text-white\">\r\n    <div class=\"text-center mb-5\">\r\n      <h1 class=\"titles\">\r\n        <strong>Po<strong class=\"text-danger\">rtfo</strong>lio</strong>\r\n      </h1>\r\n      <p class=\"lead\">A showcase of my latest projects and works</p>\r\n    </div>\r\n\r\n    <div class=\"container\">\r\n      <div class=\"row gy-4 justify-content-center\">\r\n        <div\r\n          v-for=\"(project, index) in projects\"\r\n          :key=\"index\"\r\n          ref=\"projectRefs\"\r\n          :class=\"['col-12 col-sm-10 col-md-6 col-lg-4', { 'visible': visibleCards[index] }]\"\r\n        >\r\n          <div class=\"card bg-dark border-0 shadow project-card h-100 scale-anim\">\r\n            <img :src=\"project.image\" alt=\"Project\" class=\"card-img-top custom-img\" />\r\n            <div class=\"card-body d-flex flex-column\">\r\n              <h5 class=\"card-title text-danger\">{{ project.title }}</h5>\r\n              <p class=\"card-text text-light flex-grow-1\">{{ project.description }}</p>\r\n              <button\r\n                type=\"button\"\r\n                class=\"btn btn-outline-danger mt-2\"\r\n                data-bs-toggle=\"modal\"\r\n                :data-bs-target=\"'#modal' + index\"\r\n              >\r\n                More Info\r\n              </button>\r\n            </div>\r\n          </div>\r\n\r\n          <!-- Modal -->\r\n          <div class=\"modal fade\" :id=\"'modal' + index\" tabindex=\"-1\" aria-hidden=\"true\">\r\n            <div class=\"modal-dialog modal-dialog-centered modal-lg\">\r\n              <div class=\"modal-content bg-dark text-white border-0\">\r\n                <div class=\"modal-header border-0\">\r\n                  <h5 class=\"modal-title\">{{ project.title }}</h5>\r\n                  <button type=\"button\" class=\"btn-close btn-close-white\" data-bs-dismiss=\"modal\"></button>\r\n                </div>\r\n                <div class=\"modal-body\">\r\n                  <img\r\n                    :src=\"project.image\"\r\n                    class=\"img-fluid rounded modal-project-image\"\r\n                    alt=\"Project Detail\"\r\n                  />\r\n                  <p class=\"mt-3\">{{ project.modalContent }}</p>\r\n\r\n                  <div v-if=\"project.tech && project.tech.length\" class=\"mb-3\">\r\n                    <strong>Technologies:</strong>\r\n                    <span\r\n                      v-for=\"(tag, tagIndex) in project.tech\"\r\n                      :key=\"tagIndex\"\r\n                      class=\"badge bg-secondary me-1\"\r\n                    >\r\n                      {{ tag }}\r\n                    </span>\r\n                  </div>\r\n\r\n                  <div class=\"d-flex gap-2 flex-wrap\">\r\n                    <a\r\n                      v-if=\"project.github\"\r\n                      :href=\"project.github\"\r\n                      target=\"_blank\"\r\n                      class=\"btn btn-sm btn-outline-light\"\r\n                    >\r\n                      GitHub\r\n                    </a>\r\n                    <a\r\n                      v-if=\"project.demo\"\r\n                      :href=\"project.demo\"\r\n                      target=\"_blank\"\r\n                      class=\"btn btn-sm btn-outline-danger\"\r\n                    >\r\n                      Live Demo\r\n                    </a>\r\n                  </div>\r\n                </div>\r\n                <div class=\"modal-footer border-0\">\r\n                  <button type=\"button\" class=\"btn btn-outline-danger\" data-bs-dismiss=\"modal\">\r\n                    Close\r\n                  </button>\r\n                </div>\r\n              </div>\r\n            </div>\r\n          </div>\r\n          <!-- End Modal -->\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </section>\r\n</template>\r\n\r\n<script>\r\nimport { ref, onMounted, nextTick } from 'vue';\r\nimport { collection, getDocs } from 'firebase/firestore';\r\nimport { db } from '../firebase';\r\n\r\nexport default {\r\n  name: 'PortfolioSection',\r\n  setup() {\r\n    const projects = ref([]);\r\n    const projectRefs = ref([]);\r\n    const visibleCards = ref([]);\r\n\r\n    const fetchProjects = async () => {\r\n      try {\r\n        const querySnapshot = await getDocs(collection(db, 'projects'));\r\n        projects.value = querySnapshot.docs.map(doc => doc.data());\r\n        visibleCards.value = new Array(projects.value.length).fill(false);\r\n        await nextTick();\r\n        observeCards();\r\n      } catch (error) {\r\n        console.error('Error fetching projects:', error);\r\n      }\r\n    };\r\n\r\n    const observeCards = () => {\r\n      projectRefs.value.forEach((el, index) => {\r\n        const observer = new IntersectionObserver(\r\n          ([entry]) => {\r\n            visibleCards.value[index] = entry.isIntersecting;\r\n          },\r\n          { threshold: 0.3 }\r\n        );\r\n        observer.observe(el);\r\n      });\r\n    };\r\n\r\n    onMounted(fetchProjects);\r\n\r\n    return { projects, visibleCards, projectRefs };\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.titles {\r\n  font-size: 2.5rem;\r\n}\r\n\r\n.project-card {\r\n  transition: transform 0.4s ease, opacity 0.4s ease;\r\n  border-radius: 12px;\r\n  opacity: 0;\r\n  transform: scale(0);\r\n}\r\n\r\n.visible .project-card {\r\n  opacity: 1;\r\n  transform: scale(1);\r\n}\r\n\r\n.custom-img {\r\n  height: 200px;\r\n  object-fit: cover;\r\n  border-top-left-radius: 12px;\r\n  border-top-right-radius: 12px;\r\n}\r\n\r\n.modal-project-image {\r\n  max-height: 300px;\r\n  width: 100%;\r\n  object-fit: contain;\r\n  display: block;\r\n  margin: 0 auto;\r\n  border-radius: 12px;\r\n  box-shadow: 0 4px 12px rgba(255, 255, 255, 0.1);\r\n}\r\n\r\n@media (max-width: 576px) {\r\n  .titles {\r\n    font-size: 1.8rem;\r\n  }\r\n\r\n  .custom-img {\r\n    height: 180px;\r\n  }\r\n\r\n  .card-title {\r\n    font-size: 1rem;\r\n  }\r\n\r\n  .card-text {\r\n    font-size: 0.9rem;\r\n  }\r\n\r\n  .btn {\r\n    font-size: 0.85rem;\r\n  }\r\n\r\n  .modal-project-image {\r\n    max-height: 200px;\r\n  }\r\n}\r\n\r\n@media (max-width: 768px) {\r\n  .modal-project-image {\r\n    max-height: 300px;\r\n  }\r\n}\r\n</style>\r\n"],"mappings":";;;AA+FA,SAASA,GAAG,EAAEC,SAAS,EAAEC,QAAO,QAAS,KAAK;AAC9C,SAASC,UAAU,EAAEC,OAAM,QAAS,oBAAoB;AACxD,SAASC,EAAC,QAAS,aAAa;AAEhC,eAAe;EACbC,IAAI,EAAE,kBAAkB;EACxBC,KAAKA,CAAA,EAAG;IACN,MAAMC,QAAO,GAAIR,GAAG,CAAC,EAAE,CAAC;IACxB,MAAMS,WAAU,GAAIT,GAAG,CAAC,EAAE,CAAC;IAC3B,MAAMU,YAAW,GAAIV,GAAG,CAAC,EAAE,CAAC;IAE5B,MAAMW,aAAY,GAAI,MAAAA,CAAA,KAAY;MAChC,IAAI;QACF,MAAMC,aAAY,GAAI,MAAMR,OAAO,CAACD,UAAU,CAACE,EAAE,EAAE,UAAU,CAAC,CAAC;QAC/DG,QAAQ,CAACK,KAAI,GAAID,aAAa,CAACE,IAAI,CAACC,GAAG,CAACC,GAAE,IAAKA,GAAG,CAACC,IAAI,CAAC,CAAC,CAAC;QAC1DP,YAAY,CAACG,KAAI,GAAI,IAAIK,KAAK,CAACV,QAAQ,CAACK,KAAK,CAACM,MAAM,CAAC,CAACC,IAAI,CAAC,KAAK,CAAC;QACjE,MAAMlB,QAAQ,CAAC,CAAC;QAChBmB,YAAY,CAAC,CAAC;MAChB,EAAE,OAAOC,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,0BAA0B,EAAEA,KAAK,CAAC;MAClD;IACF,CAAC;IAED,MAAMD,YAAW,GAAIA,CAAA,KAAM;MACzBZ,WAAW,CAACI,KAAK,CAACW,OAAO,CAAC,CAACC,EAAE,EAAEC,KAAK,KAAK;QACvC,MAAMC,QAAO,GAAI,IAAIC,oBAAoB,CACvC,CAAC,CAACC,KAAK,CAAC,KAAK;UACXnB,YAAY,CAACG,KAAK,CAACa,KAAK,IAAIG,KAAK,CAACC,cAAc;QAClD,CAAC,EACD;UAAEC,SAAS,EAAE;QAAI,CACnB,CAAC;QACDJ,QAAQ,CAACK,OAAO,CAACP,EAAE,CAAC;MACtB,CAAC,CAAC;IACJ,CAAC;IAEDxB,SAAS,CAACU,aAAa,CAAC;IAExB,OAAO;MAAEH,QAAQ;MAAEE,YAAY;MAAED;IAAY,CAAC;EAChD;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}