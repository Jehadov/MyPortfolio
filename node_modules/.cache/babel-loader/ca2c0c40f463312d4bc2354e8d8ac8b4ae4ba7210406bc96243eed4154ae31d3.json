   class=\"card h-100 text-center shadow-sm skill-card\"\r\n          :class=\"[\r\n            visibleCards[index]\r\n              ? (index % 2 === 0 ? 'slide-in-top-left' : 'slide-in-bottom-right')\r\n              : (index % 2 === 0 ? 'slide-out-top-left' : 'slide-out-bottom-right')\r\n          ]\"\r\n        >\r\n          <img\r\n            :src=\"skill.image\"\r\n            :alt=\"skill.name\"\r\n            class=\"card-img-top p-3\"\r\n            style=\"height: 100px; object-fit: contain;\"\r\n          />\r\n          <div class=\"card-body\">\r\n            <h5 class=\"card-title text-light\">{{ skill.name }}</h5>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </section>\r\n</template>\r\n\r\n<script>\r\nimport { db } from '@/firebase';\r\nimport { collection, getDocs } from 'firebase/firestore';\r\n\r\nexport default {\r\n  name: 'SkillsComponent',\r\n  data() {\r\n    return {\r\n      skills: [],\r\n      skillRefs: [],\r\n      visibleCards: [],\r\n    };\r\n  },\r\n  async mounted() {\r\n    await this.fetchSkills();\r\n    this.$nextTick(() => {\r\n      this.observeCards();\r\n    });\r\n  },\r\n  methods: {\r\n    async fetchSkills() {\r\n      const querySnapshot = await getDocs(collection(db, 'skills'));\r\n      this.skills = querySnapshot.docs.map(doc => doc.data());\r\n      this.visibleCards = new Array(this.skills.length).fill(false);\r\n    },\r\n    observeCards() {\r\n      this.skillRefs.forEach((el, index) => {\r\n        const observer = new IntersectionObserver(\r\n          ([entry]) => {\r\n            this.visibleCards[index] = entry.isIntersecting;\r\n          },\r\n          { threshold: 0.3 }\r\n        );\r\n        if (el) observer.observe(el);\r\n      });\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.skill-card {\r\n  transition: transform 0.6s ease, opacity 0.6s ease;\r\n  border-radius: 15px;\r\n  border: 1px solid rgb(164, 0, 0);\r\n  background-color: rgba(0, 0, 0, 0.7);\r\n  color: white;\r\n  opacity: 0;\r\n  transform: translate(0, 0);\r\n}\r\n\r\n/* Slide IN animations */\r\n.slide-in-top-left {\r\n  opacity: 1;\r\n  transform: translate(0, 0); /* reset to normal */\r\n}\r\n\r\n.slide-in-bottom-right {\r\n  opacity: 1;\r\n  transform: translate(0, 0); /* reset to normal */\r\n}\r\n\r\n/* Slide OUT animations */\r\n.slide-out-top-left {\r\n  opacity: 0;\r\n  transform: translate(-40px, -40px);\r\n}\r\n\r\n.slide-out-bottom-right {\r\n  opacity: 0;\r\n  transform: translate(40px, 40px);\r\n}\r\n\r\n/* On hover */\r\n.skill-card:hover {\r\n  transform: scale(1.05);\r\n}\r\n\r\n/* Mobile */\r\n@media (max-width: 576px) {\r\n  .skill-card {\r\n    padding: 10px;\r\n  }\r\n  .card-title {\r\n    font-size: 0.95rem;\r\n  }\r\n}\r\n</style>\r\n"],"mappings":";;;AAqCA,SAASA,EAAC,QAAS,YAAY;AAC/B,SAASC,UAAU,EAAEC,OAAM,QAAS,oBAAoB;AAExD,eAAe;EACbC,IAAI,EAAE,iBAAiB;EACvBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,MAAM,EAAE,EAAE;MACVC,SAAS,EAAE,EAAE;MACbC,YAAY,EAAE;IAChB,CAAC;EACH,CAAC;EACD,MAAMC,OAAOA,CAAA,EAAG;IACd,MAAM,IAAI,CAACC,WAAW,CAAC,CAAC;IACxB,IAAI,CAACC,SAAS,CAAC,MAAM;MACnB,IAAI,CAACC,YAAY,CAAC,CAAC;IACrB,CAAC,CAAC;EACJ,CAAC;EACDC,OAAO,EAAE;IACP,MAAMH,WAAWA,CAAA,EAAG;MAClB,MAAMI,aAAY,GAAI,MAAMX,OAAO,CAACD,UAAU,CAACD,EAAE,EAAE,QAAQ,CAAC,CAAC;MAC7D,IAAI,CAACK,MAAK,GAAIQ,aAAa,CAACC,IAAI,CAACC,GAAG,CAACC,GAAE,IAAKA,GAAG,CAACZ,IAAI,CAAC,CAAC,CAAC;MACvD,IAAI,CAACG,YAAW,GAAI,IAAIU,KAAK,CAAC,IAAI,CAACZ,MAAM,CAACa,MAAM,CAAC,CAACC,IAAI,CAAC,KAAK,CAAC;IAC/D,CAAC;IACDR,YAAYA,CAAA,EAAG;MACb,IAAI,CAACL,SAAS,CAACc,OAAO,CAAC,CAACC,EAAE,EAAEC,KAAK,KAAK;QACpC,MAAMC,QAAO,GAAI,IAAIC,oBAAoB,CACvC,CAAC,CAACC,KAAK,CAAC,KAAK;UACX,IAAI,CAAClB,YAAY,CAACe,KAAK,IAAIG,KAAK,CAACC,cAAc;QACjD,CAAC,EACD;UAAEC,SAAS,EAAE;QAAI,CACnB,CAAC;QACD,IAAIN,EAAE,EAAEE,QAAQ,CAACK,OAAO,CAACP,EAAE,CAAC;MAC9B,CAAC,CAAC;IACJ;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}